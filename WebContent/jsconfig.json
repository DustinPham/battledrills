{
	"compilerOptions": {
		"target": "es2017",
		"allowSyntheticDefaultImports": false,
		"baseUrl": "./",
		"paths": {
			"CSS/*": ["src/client/css/*"],
			"UTILITIES/*": ["src/client/js/utilities/*"],
			"REDUX/*": ["src/client/js/redux/*"],
			"CORE/*": ["src/client/js/core/*"],
			"COMPONENTS/*": ["src/client/js/components/*"],
			"HOOKS/*": ["src/client/js/hooks/*"],
			"FONTS/*": ["src/client/lib/fonts"]
		}
	},
	"exclude": ["node_modules", "dist"]
}
